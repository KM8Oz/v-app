{
  "compilerOptions": {
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node", 
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@main/*": [
        "src/marin/*"
      ],
      "@render/*": [
        "src/render/*"
      ]
    }
  },
  "include": [
    "*/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "config/*",
    "eslint-rules/*"
  ],
}